<controls:MWindow 
    x:Class="QTRHacker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:QTRHacker"
    xmlns:controls="clr-namespace:QTRHacker.Controls"
    xmlns:pagepanels="clr-namespace:QTRHacker.Views.PagePanels"
    xmlns:l="clr-namespace:QTRHacker.Localization"
    mc:Ignorable="d"
    Title="QTRHacker"
    WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" SnapsToDevicePixels="True"
    >
    <Grid>
        <TabControl x:Name="MainTabControl" TabStripPlacement="Left">
            <TabItem Header="{l:Localization UI.DirectFunction}" IsEnabled="False" FontSize="20">
                <pagepanels:DirectFunctionsPage DataContext="{Binding DirectFunctionsPageViewModel}"/>
            </TabItem>
            <TabItem Header="{l:Localization UI.Player}" IsEnabled="False" FontSize="20">
                <pagepanels:PlayersPage x:Name="PlayersPage" DataContext="{Binding PlayersPageViewModel}"/>
            </TabItem>
            <TabItem Header="{l:Localization UI.MainPage}" IsSelected="True" FontSize="20">
                <pagepanels:MainPage AttachedToGame="MainPage_AttachedToGame" DataContext="{Binding MainPageViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</controls:MWindow>
