<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
  </PropertyGroup>
  
  <PropertyGroup>
    <AssemblyVersion>9.5.0.0</AssemblyVersion>
    <AssemblyName>QTRHacker</AssemblyName>
    <RootNamespace>QTRHacker</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$(SolutionDir)bin\Debug\</OutputPath>
    <PlatformTarget>x86</PlatformTarget>
    <NoWarn>1701;1702;IDE0017;IDE0090</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$(SolutionDir)bin\Release\</OutputPath>
    <PlatformTarget>x86</PlatformTarget>
    <NoWarn>1701;1702;IDE0017;IDE0090</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(SolutionDir)Content\**" CopyToOutputDirectory="PreserveNewest" LinkBase="Content\" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Languages\Languages.json" />
    <None Remove="Res\ContentImage\BuffImages.bin" />
    <None Remove="Res\ContentImage\ItemImages.bin" />
    <None Remove="Res\ContentImage\NPCImages.bin" />
    <None Remove="Res\ContentImage\PlayerModelsRaw.bin" />
    <None Remove="Res\ContentImage\TileImages.bin" />
    <None Remove="Res\ContentImage\WallImages.bin" />
    <None Remove="Res\Game\Mount_en.txt" />
    <None Remove="Res\Game\Pet_en.txt" />
    <None Remove="Res\Game\Prefix_en.txt" />
    <None Remove="Res\Game\WikiRes.zip" />
    <None Remove="Res\Image\close.png" />
    <None Remove="Res\Image\min.png" />
    <None Remove="Res\Image\Numbers.png" />
    <None Remove="Res\Image\player.png" />
    <None Remove="Res\Image\TMLIcon.png" />
    <None Remove="Res\Text\About.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Languages\Languages.json" />
    <EmbeddedResource Include="Res\ContentImage\BuffImages.bin" />
    <EmbeddedResource Include="Res\ContentImage\ItemImages.bin" />
    <EmbeddedResource Include="Res\ContentImage\NPCImages.bin" />
    <EmbeddedResource Include="Res\ContentImage\PlayerModelsRaw.bin" />
    <EmbeddedResource Include="Res\ContentImage\TileImages.bin" />
    <EmbeddedResource Include="Res\ContentImage\WallImages.bin" />
    <EmbeddedResource Include="Res\Game\Mount_en.txt" />
    <EmbeddedResource Include="Res\Game\Pet_en.txt" />
    <EmbeddedResource Include="Res\Game\Prefix_en.txt" />
    <EmbeddedResource Include="Res\Game\WikiRes.zip" />
    <EmbeddedResource Include="Res\Image\close.png" />
    <EmbeddedResource Include="Res\Image\min.png" />
    <EmbeddedResource Include="Res\Image\Numbers.png" />
    <EmbeddedResource Include="Res\Image\player.png" />
    <EmbeddedResource Include="Res\Image\TMLIcon.png" />
    <EmbeddedResource Include="Res\Text\About.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.1.2.30" />
    <PackageReference Include="IronPython" Version="2.7.11" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\QHackLib\QHackLib.csproj" />
    <ProjectReference Include="..\QTRHacker.Functions\QTRHacker.Functions.csproj" />
