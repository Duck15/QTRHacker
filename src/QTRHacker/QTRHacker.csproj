<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x86</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>QTRHacker</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\ItemImages.bin" />
    <None Remove="Localization\Content\en-US.json" />
    <None Remove="Localization\zh-Hans.json" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\GameImages\Items.bin" />
    <Resource Include="Localization\Content\en-US.json" />
    <Resource Include="Localization\Content\zh-Hans.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Keystone.Net\Keystone.Net.csproj" />
    <ProjectReference Include="..\QHackCLR\QHackCLR.vcxproj" />
    <ProjectReference Include="..\QHackLib\QHackLib.csproj" />
    <ProjectReference Include="..\QTRHacker.Functions\QTRHacker.Functions.csproj" />
  </ItemGroup>

</Project>
