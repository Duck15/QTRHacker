<UserControl x:Class="QTRHacker.Views.PagePanels.PlayersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:QTRHacker.Controls"
             xmlns:l="clr-namespace:QTRHacker.Localization"
             mc:Ignorable="d" 
             Width="300" Height="340"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="PlayersList" FontSize="15" Grid.Column="0" Focusable="False" BorderThickness="0"
                  Foreground="Black" ItemsSource="{Binding Players}" Background="#606060">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ID, StringFormat='{}{0}: '}" Foreground="{StaticResource QTRHacker.Common.Foreground}"/>
                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource QTRHacker.Common.Foreground}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Margin="2,0,0,0" Orientation="Vertical" Grid.Column="1">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=SelectedItem, ElementName=PlayersList}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource QTRHacker.StripButtonStyle}"/>
            </StackPanel.Resources>
            <Button Content="{l:Localization UI.Edit}" Click="Edit_Click"/>
            <Button Content="{l:Localization UI.TPTo}"/>
        </StackPanel>
    </Grid>
</UserControl>
